schema {
    query: Query
    mutation: Mutation
}

type Query {
    # Verifies JWT
    verifyToken(token: String!): JWTVerification!
}

type Mutation {
    # Registers a new User.
    register(email: String!, password: String!): User
    # Logs a User in, returns a JSONWebtoken.
    login(email: String!, password: String!): String!
}
